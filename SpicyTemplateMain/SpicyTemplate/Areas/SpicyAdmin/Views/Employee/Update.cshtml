@using SpicyTemplate.Areas.SpicyAdmin.ViewModels.Employee;

@model UpdateEmployeeVM

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div azik class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Basic form elements</h4>
                        <p class="card-description">
                            Basic form elements
                        </p>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly"></div>
                            <img src="~/assets/img/@Model.Image"/>
                            <input asp-for="Image" type="hidden"></input>
                            <div class="form-group">
                                <label asp-for="Name" for="exampleInputName1">Name</label>
                                <input asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Profession" for="exampleInputName1">Profession</label>
                                <input asp-for="Profession" class="form-control" id="exampleInputName1" placeholder="Profession">
                                <span asp-validation-for="Profession"></span>
                            </div>
                           <div class="form-group">
                                <label asp-for="Photo" for="exampleInputName1">Photo</label>
                                <input asp-for="Photo" class="form-control" id="exampleInputName1" placeholder="Photo">
                                <span asp-validation-for="Photo"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
   </div>
