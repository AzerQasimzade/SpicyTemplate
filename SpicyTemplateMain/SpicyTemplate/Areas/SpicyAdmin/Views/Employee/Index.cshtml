@model List<Employee>
@{
    int count = 0;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Employee Table</h4>
                        <a href="/SpicyAdmin/employee/Create">Create Employee</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Profession
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>
                                               @count
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td class="py-1">
                                                <img src="~/assets/img/@item.Image" alt="image" />
                                            </td>
                                            <td>
                                                @item.Profession
                                            </td>
                                            <td>
                                                <a class="btn btn-warning"  asp-area="SpicyAdmin" asp-action="update" asp-controller="employee" asp-route-id="@item.Id">Update</a>
                                                <a class="btn btn-danger" asp-area="SpicyAdmin" asp-action="delete" asp-controller="employee" asp-route-id="@item.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>